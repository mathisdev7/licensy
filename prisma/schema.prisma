generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model License {
  id          String    @id @default(cuid())
  guildId     String
  key         String    @unique
  role        String
  author      String
  redeemer    String?
  activated   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  validUntil  BigInt
}

model Logs {
  id          String    @id @default(cuid())
  guildId     String    @unique
  channel     String
  activated   Boolean
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Premium {
  id          String    @id @default(cuid())
  userId      String
  guildId     String
  validUntil  BigInt
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Locale {
  id          String    @id @default(cuid())
  guildId     String
  locale      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}