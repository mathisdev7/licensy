generator client {
  provider = "prisma-client"
  output   = "./generated"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model License {
  id          String    @id @default(cuid())
  guildId     String
  key         String    @unique
  role        String
  author      String
  redeemer    String?
  activated   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  validUntil  BigInt
}

model Logs {
  id          String    @id @default(cuid())
  guildId     String    @unique
  channel     String
  activated   Boolean
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Premium {
  id          String    @id @default(cuid())
  userId      String
  guildId     String
  validUntil  BigInt
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model LicenseManager {
  id        String   @id @default(cuid())
  guildId   String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, roleId])
}

model LicenseHistory {
  id         String   @id @default(cuid())
  guildId    String
  licenseKey String
  action     String
  actorId    String?
  targetId   String?
  details    String?
  createdAt  DateTime @default(now())

  @@index([guildId, createdAt])
  @@index([licenseKey])
}

model LicenseBan {
  id        String   @id @default(cuid())
  guildId   String
  userId    String
  reason    String?
  expiresAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, userId])
  @@index([guildId, expiresAt])
}
